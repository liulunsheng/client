
.share-container{
  display: flex;
  flex-direction: column;
  text-align: center;
  background-color: #cd533e;
  height: 100%;
}
.share-icon{
  width: 150rpx;
  height: 150rpx;
  margin: 20rpx auto;
  border-radius: 75rpx;
}
.share-message-container{
  display: flex;
  flex-direction: row;
  justify-content:  center;
}
.share-message-container text{
  color: #fcdcad;
  line-height: 45rpx;
  font-size: 38rpx;
  
}
.share-message-img{
  width: 45rpx;
  height: 45rpx;
}
.share-title{
  font-size: 40rpx;
  color: #fcdcad;
  margin-top: 38rpx;
  font-weight: bold;
  letter-spacing: 2rpx;
}
.share-below{
  width: 85%;
  margin: 150rpx auto;
  padding: 30rpx;
  background-color: #fff;
  border-radius: 20rpx;
}
.share-below button{
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  margin-bottom: 25rpx;
}
.share-bt1{
  background-color: #1aac19;
  color: #fff;
}
.share-bt2{
  color: #313131;
}
.back{
  width: 45rpx;
  height: 45rpx;
  vertical-align: middle;

}
.text-back{
  padding-left: 10rpx;
  line-height: 45rpx;
  vertical-align: middle;
}
canvas{
  position: fixed;
  top:0;
  left:0;
  right:0;
  bottom:0;
  width:100%;
  height:100%;
}